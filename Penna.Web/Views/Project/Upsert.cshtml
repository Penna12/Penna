@model ProjectDto
@{
    ViewData["Title"] = "Proje Giriş-Güncelleme";
}

@section Styles {
    <style>
        .underline {
            display: block;
            line-height: 2.5rem;
        }

        .underline-primary {
            border-bottom: 1px solid #009ef7;
        }

        .underline-gray {
            border-bottom: 2px solid #e0e0e0;
        }
    </style>
}

<div class="card">
    <div class="card-header border-0 pt-10">
        <h2 class="fw-bolder">
            @if (Model.Project.Id > 0)
            {<span>Proje Güncelleme</span> }
            else
            { <span>Yeni Proje Ekleme</span>}
        </h2>
        <span class="flex-lg-row">
            <a asp-action="Index" asp-route-status="all" class="btn btn-sm btn-flex btn-light-primary px-6">
                <!--begin::Svg Icon | path: assets/media/icons/duotune/general/gen050.svg-->
                <span class="svg-icon svg-icon-muted svg-icon-2hx">
                    <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none">
