                </span>
                <!--end::Svg Icon-->
                <span class="d-flex flex-column align-items-start ms-2">
                    <span class="fs-5 fw-bolder">Kapalı Projeler</span>
                </span>
            </a>
        </span>
    </div>
    <div class="card-body pt-0">
        <form class="form" method="post" id="kt_upsert_projects_form">
            <div class="row">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                @if (Model.Project.Id > 0)
                {
                    <input type="hidden" asp-for="Project.Id" />
                    <input type="hidden" asp-for="Project.TenantId" />
                    <input type="hidden" asp-for="Project.CreatedBy" />
                    <input type="hidden" asp-for="Project.CreatedDate" />
                    <input type="hidden" asp-for="Project.Status" />
                    <input type="hidden" asp-for="Project.IsLocked" />
                }
            </div>
            <div class="row">
                <div class="col-6">
                    <div class="row mb-5">
                        <div class="d-flex flex-column mb-5 fv-row">
                            <label class="fs-5 fw-bold mb-2">Proje Adı</label>
                            <input type="text" asp-for="Project.ProjectName" class="form-control form-control-solid" placeholder="Proje adı giriniz." />
                            <span asp-validation-for="Project.ProjectName" class="text-danger"></span>
                        </div>
                        <div class="mb-5 fv-row">
                            <div class="d-flex">
                                <label class="fs-5 fw-bold mb-2 mt-4">İşveren Firma </label>
                                <div class="d-flex flex-grow-1 justify-content-end">
                                    <a href="#" class="btn btn-link align-items-end" data-bs-toggle="modal" data-bs-target="#kt_modal_add_currentaccounts">Yeni Firma Tanımla</a>
                                </div>
                            </div>
                            <select asp-for="Project.CurrentAccountId" asp-items="Model.CurrentAccountList" class="form-select form-select-solid" data-control="select2">
                                <option value="">--- Firma Seçiniz ---</option>
                            </select>
                        </div>
                        <div class="d-flex flex-column mb-5 fv-row">
                            <label class="fs-5 fw-bold mb-2">Yetkili Adı</label>
                            <input type="text" id="EmployerFullName" class="form-control form-control-solid" readonly placeholder="Yetkili adı giriniz." value="@(Model.Project.Id > 0 ? Model.Project.CurrentAccount?.AuthorizedPerson : "")" />
                        </div>
                        <div class="d-flex flex-column mb-5 fv-row">
                            <label class="fs-5 fw-bold mb-2">İletişim No</label>
                            <input type="text" id="EmployerPhone" class="form-control form-control-solid" readonly placeholder="Telefon no giriniz." value="@(Model.Project.Id > 0 ? Model.Project.CurrentAccount?.Phone1 : "")" />
                        </div>
                        <div class="d-flex flex-column mb-5 fv-row">
                            <label class="fs-5 fw-bold mb-2">Eposta</label>
                            <input type="text" id="EmployerEmail" class="form-control form-control-solid" readonly placeholder="Eposta giriniz." value="@(Model.Project.Id > 0 ? Model.Project.CurrentAccount?.Email : "")" />
                        </div>
                        <div class="pt-10 pb-lg-5">
                            <h2 class="fw-bolder text-dark underline underline-gray">Arazi Bilgileri</h2>
                        </div>
                        <!--begin::Pafta,Ada,Parsel-->
                        <div class="row mb-5">
                            <div class="col-md-4 fv-row fv-plugins-icon-container">
                                <label class="fs-5 fw-bold mb-2">Pafta</label>
                                <input type="text" asp-for="Project.Pafta" class="form-control form-control-solid" placeholder="Pafta no." />
                                <span asp-validation-for="Project.Pafta" class="text-danger"></span>
                            </div>
                            <div class="col-md-4 fv-row fv-plugins-icon-container">
                                <label class="fs-5 fw-bold mb-2">Ada</label>
                                <input type="text" asp-for="Project.Ada" class="form-control form-control-solid" placeholder="Pafta no." />
                                <span asp-validation-for="Project.Ada" class="text-danger"></span>
                            </div>
                            <div class="col-md-4 fv-row fv-plugins-icon-container">
                                <label class="fs-5 fw-bold mb-2">Parsel</label>
                                <input type="text" asp-for="Project.Parsel" class="form-control form-control-solid" placeholder="Pafta no." />
                                <span asp-validation-for="Project.Parsel" class="text-danger"></span>
                            </div>
                        </div>
                        <!--end::Pafta,Ada,Parsel-->
                        <!--begin::CountryId, CityId,TownId-->
                        <div class="row mb-5">
                            <div class="col-md-4 fv-row fv-plugins-icon-container">
                                <label class="fs-5 fw-bold mb-2">Ülke</label>
                                <select asp-for="Project.CountryId" asp-items="Model.CountryList" class="form-select form-select-solid" data-control="select2">
                                    <option value="">--- Ülke seçiniz ---</option>
                                </select>
                                <span asp-validation-for="Project.CityId" class="text-danger"></span>
                            </div>
                            <div class="col-md-4 fv-row fv-plugins-icon-container">
                                <label class="fs-5 fw-bold mb-2">İl</label>
                                <select asp-for="Project.CityId" asp-items="Model.CityList" class="form-select form-select-solid" data-control="select2">
                                    <option value="">--- İl seçiniz ---</option>
                                </select>
                                <span asp-validation-for="Project.CityId" class="text-danger"></span>
                            </div>
                            <div class="col-md-4 fv-row fv-plugins-icon-container">
                                <label class="fs-5 fw-bold mb-2">İlçe</label>
                                <select asp-for="Project.TownId" asp-items="Model.TownList" class="form-select form-select-solid" data-control="select2">
                                    <option value="">--- İlçe seçiniz ---</option>
                                </select>
                                <span asp-validation-for="Project.TownId" class="text-danger"></span>
                            </div>
                        </div>
                        <!--end::CountryId, CityId,TownId-->

                        <div class="pt-10 pb-lg-5">
                            <!--begin::Title-->
                            <h2 class="text-dark fw-bolder underline underline-gray">Proje Kapsamı</h2>
                            <!--end::Title-->
                        </div>
                        <!--begin::BlockCount,TotalApartmentCount,TotalCommercialCount-->
                        <div class="row mb-5">
                            <div class="col-md-4 fv-row fv-plugins-icon-container">
                                <label class="fs-5 fw-bold mb-2">Blok Sayısı</label>
                                <input type="text" asp-for="Project.BlockCount" class="form-control form-control-solid" placeholder="" />
                                <span asp-validation-for="Project.BlockCount" class="text-danger"></span>
                            </div>
                            <div class="col-md-4 fv-row fv-plugins-icon-container">
                                <label class="fs-5 fw-bold mb-2">
                                    Konut Sayısı
                                    <i class="fas fa-exclamation-circle ms-2 fs-7" data-bs-toggle="tooltip" title="" data-bs-original-title="Toplam Bağımsız Bölüm, Konut" aria-label="Toplam Bağımsız Bölüm, Konut"></i>
                                </label>
                                <input type="text" asp-for="Project.TotalApartmentCount" class="form-control form-control-solid" placeholder="" />
                                <span asp-validation-for="Project.TotalApartmentCount" class="text-danger"></span>
                            </div>
                            <div class="col-md-4 fv-row fv-plugins-icon-container">
                                <label class="fs-5 fw-bold mb-2">Ticari</label>
                                <input type="text" asp-for="Project.TotalCommercialCount" class="form-control form-control-solid" placeholder="" />
                                <span asp-validation-for="Project.TotalCommercialCount" class="text-danger"></span>
                            </div>
                        </div>
                        <!--end::BlockCount,TotalApartmentCount,TotalCommercialCount-->
                    </div>
                </div>
                <div class="col-6">
                    <div class="pt-10 pb-lg-5">
                        <!--begin::Title-->
                        <h2 class="text-dark fw-bolder underline underline-gray">Alt Proje Bilgileri</h2>
                        <!--end::Title-->
                    </div>
                    <!--begin::ArchitecturalWorks,StaticWorks,MechanicalWorks,ElectricalWorks,LandScapeWorks-->
                    <div class="row mb-5">
                        <div class="d-flex flex-column mb-5 fv-row">
                            <label class="fs-5 fw-bold mb-2">Mimari</label>
                            <input type="text" asp-for="Project.ArchitecturalWorks" class="form-control form-control-solid" placeholder="Mimarlık firma adı giriniz." />
                            <span asp-validation-for="Project.ArchitecturalWorks" class="text-danger"></span>
                        </div>
                        <div class="d-flex flex-column mb-5 fv-row">
                            <label class="fs-5 fw-bold mb-2">Statik</label>
                            <input type="text" asp-for="Project.StaticWorks" class="form-control form-control-solid" placeholder="Statik firma adı giriniz." />
                            <span asp-validation-for="Project.StaticWorks" class="text-danger"></span>
                        </div>
                        <div class="d-flex flex-column mb-5 fv-row">
                            <label class="fs-5 fw-bold mb-2">Mekanik</label>
                            <input type="text" asp-for="Project.MechanicalWorks" class="form-control form-control-solid" placeholder="Mekanik firma adı giriniz." />
                            <span asp-validation-for="Project.MechanicalWorks" class="text-danger"></span>
                        </div>
                        <div class="d-flex flex-column mb-5 fv-row">
                            <label class="fs-5 fw-bold mb-2">Elektrik</label>
                            <input type="text" asp-for="Project.ElectricalWorks" class="form-control form-control-solid" placeholder="Elektrik firma adı giriniz." />
                            <span asp-validation-for="Project.ElectricalWorks" class="text-danger"></span>
                        </div>
                        <div class="d-flex flex-column mb-5 fv-row">
                            <label class="fs-5 fw-bold mb-2">Peyzaj</label>
                            <input type="text" asp-for="Project.LandScapeWorks" class="form-control form-control-solid" placeholder="Peyzaj firma adı giriniz." />
                            <span asp-validation-for="Project.LandScapeWorks" class="text-danger"></span>
                        </div>
                    </div>
                    <!--end::ArchitecturalWorks,StaticWorks,MechanicalWorks,ElectricalWorks,LandScapeWorks-->
                    <div class="pt-10 pb-lg-5">
                        <!--begin::Title-->
                        <h2 class="text-dark fw-bolder underline underline-gray">Proje Detay Bilgileri</h2>
                        <!--end::Title-->
                    </div>
                    <!--begin::EmploymentDate,CommitmentDate,LicenseDate,LicenseNumber-->
                    <div class="row mb-5">
                        <div class="col-md-6 fv-row fv-plugins-icon-container">
                            <label class="fs-5 fw-bold mb-2">İş Alım Tarihi</label>
                            <input asp-for="Project.EmploymentDate" class="form-control form-control-solid ps-12 flatpickr-input active" placeholder="İş alım tarihi">
                            <span asp-validation-for="Project.EmploymentDate" class="text-danger"></span>
                        </div>
                        <div class="col-md-6 fv-row fv-plugins-icon-container">
                            <label class="fs-5 fw-bold mb-2">Taahhüt Tarihi</label>
                            <input asp-for="Project.CommitmentDate" class="form-control form-control-solid ps-12 flatpickr-input active" placeholder="Taahhüt tarihi">
                            <span asp-validation-for="Project.CommitmentDate" class="text-danger"></span>
                        </div>
                    </div>
                    <!--end::EmploymentDate,CommitmentDate-->
                    <!--begin::LicenseDate,LicenseNumber-->
                    <div class="row mb-5">
                        <div class="col-md-6 fv-row fv-plugins-icon-container">
                            <label class="fs-5 fw-bold mb-2">Ruhsat Tarihi</label>
                            <input asp-for="Project.LicenseDate" class="form-control form-control-solid ps-12 flatpickr-input active" placeholder="Ruhsat tarihi">
                            <span asp-validation-for="Project.LicenseDate" class="text-danger"></span>
                        </div>
                        <div class="col-md-6 fv-row fv-plugins-icon-container">
                            <label class="fs-5 fw-bold mb-2">Ruhsat No</label>
                            <input type="text" asp-for="Project.LicenseNumber" class="form-control form-control-solid" placeholder="Ruhsat no girin">
                            <span asp-validation-for="Project.LicenseNumber" class="text-danger"></span>
                        </div>
                    </div>
                    <!--end::LicenseDate,LicenseNumber-->
                    <!--begin::BuildingInspection-->
                    <div class="row mb-5">
                        <div class="col-md-12 fv-row fv-plugins-icon-container">
                            <label class="fs-5 fw-bold mb-2">Yapı Denetim</label>
                            <input type="text" asp-for="Project.BuildingInspection" class="form-control form-control-solid" placeholder="Yapı denetim firmasını girin">
                            <span asp-validation-for="Project.BuildingInspection" class="text-danger"></span>
                        </div>
                    </div>
                    <!--end::BuildingInspection-->
                </div>
            </div>
            <div class="pt-10 pb-lg-5">
                <!--begin::Title-->
                <h2 class="text-dark fw-bolder underline underline-gray">Proje Mali Bilgileri</h2>
                <!--end::Title-->
            </div>
            @if(Model.Project.Id == 0) { 
            <div class="row">
                <div class="col-md-2">
                    <label class="fs-5 fw-bold mb-2">Taahhüt Tutarı</label>
                    <input asp-for="Project.CommitmentAmount" type="text" class="form-control form-control-solid" />
                    <span asp-validation-for="Project.CommitmentAmount" class="text-danger"></span>
                </div>
                <div class="col-md-2">
                    <label class="fs-5 fw-bold mb-2">Peşinat Oranı</label>
                    <input asp-for="Project.DownPaymentRate" type="text" class="form-control form-control-solid" />
                    <span asp-validation-for="Project.DownPaymentRate" class="text-danger"></span>
                </div>
                <div class="col-md-2">
                    <label class="fs-5 fw-bold mb-2">Taksit Sayısı</label>
                    <input asp-for="Project.InstallmentCount" type="text" class="form-control form-control-solid" />
                    <span asp-validation-for="Project.InstallmentCount" class="text-danger"></span>
                </div>
            </div>}
            <div class="row">
                <div class="col-12">
                    <div class="flex-center pt-10">
                        <!--begin::Button-->
                        <button type="submit" id="kt_upsert_projects_submit" class="btn btn-primary">
                            <i class="far fa-save"></i>
                            <span class="indicator-label">Kaydet</span>
                            <span class="indicator-progress">
                                Lütfen bekleyin...
                                <span class="spinner-border spinner-border-sm align-middle ms-2"></span>
                            </span>
                        </button>
                        <!--end::Button-->
                    </div>
                </div>
            </div>
        </form>
    </div>
</div>

<!--begin::Modal - CurrentAccount - Add-->
<div class="modal fade" id="kt_modal_add_currentaccounts" tabindex="-1" aria-hidden="true">
    <!--begin::Modal dialog-->
    <div class="modal-dialog modal-dialog-centered mw-850px">
        <!--begin::Modal content-->
        <div class="modal-content">
            <!--begin::Form-->
            <form class="form" action="#" method="post" id="kt_modal_add_currentaccounts_form" data-kt-redirect="/Subcontractor">
                <!--begin::Modal header-->
                <div class="modal-header" id="kt_modal_add_currentaccounts_header">
                    <!--begin::Modal title-->
                    <h2 class="fw-bolder">Yeni Cari Hesap Ekleme</h2>
                    <!--end::Modal title-->
                    <!--begin::Close-->
                    <div id="kt_modal_add_currentaccounts_close" class="btn btn-icon btn-sm btn-active-icon-primary">
                        <!--begin::Svg Icon | path: icons/duotone/Navigation/Close.svg-->
                        <span class="svg-icon svg-icon-1">
                            <svg xmlns="http://www.w3.org/2000/svg" xmlns:xlink="http://www.w3.org/1999/xlink" width="24px" height="24px" viewBox="0 0 24 24" version="1.1">
                                <g transform="translate(12.000000, 12.000000) rotate(-45.000000) translate(-12.000000, -12.000000) translate(4.000000, 4.000000)" fill="#000000">
                                    <rect fill="#000000" x="0" y="7" width="16" height="2" rx="1" />
                                    <rect fill="#000000" opacity="0.5" transform="translate(8.000000, 8.000000) rotate(-270.000000) translate(-8.000000, -8.000000)" x="0" y="7" width="16" height="2" rx="1" />
                                </g>
                            </svg>
                        </span>
                        <!--end::Svg Icon-->
                    </div>
                    <!--end::Close-->
                </div>
                <!--end::Modal header-->
                <!--begin::Modal body-->
                <div class="modal-body py-10 px-lg-17">
                    <!--begin::Scroll-->
                    <div class="scroll-y me-n7 pe-7" id="kt_modal_add_currentaccounts_scroll" data-kt-scroll="true" data-kt-scroll-activate="{default: false, lg: true}" data-kt-scroll-max-height="auto" data-kt-scroll-dependencies="#kt_modal_add_currentaccounts_header" data-kt-scroll-wrappers="#kt_modal_add_currentaccounts_scroll" data-kt-scroll-offset="300px">
                        <!--begin::Input group CompanyName & AuthorizedPerson-->
                        <div class="row mb-7">
                            <!--begin::Input group CompanyName-->
                            <div class="col-md-6 fv-row">
                                <!--begin::Label-->
