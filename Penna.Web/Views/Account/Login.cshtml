@model SignInModel
@{ Layout = null;}
<!doctype html>
<html lang="en">
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <meta name="description" content="Penna Yapı Dekorasyon">
    <meta name="author" content="Penna Yapı Dekorasyon">
    <meta name="generator" content="Hugo 0.87.0">
    <title>Yönetim Paneli - Giriş</title>

    <!-- Bootstrap core CSS -->
    <link href="~/lib/bootstrap/dist/css/bootstrap.min.css" rel="stylesheet">

    <!-- Favicons -->
    <link rel="icon" type="image/png" sizes="16x16" href="~/assets/media/logos/favicon-16x16.png">
    <meta name="msapplication-TileColor" content="#ffffff">
    <meta name="theme-color" content="#ffffff">

    <!-- Custom styles for this template -->
    <link href="~/assets/css/style.bundle.css" rel="stylesheet">
    <link href="~/assets/css/signin.css" rel="stylesheet">
</head>
<body>
    <div class="container">
        <main class="form-signin border border-1 gray shadow">
            <a asp-action="Index" asp-controller="Home" asp-area="">
                <span style="font-size:24px;font-weight:bold;color:darkorange;margin:30px 0;display:block">P E N N A &nbsp;&nbsp; Y A P I</span>
            </a>
            <form method="post" asp-action="Login">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                <h1 class="h3 mb-3 fw-normal">Hesabınıza Giriş Yapın</h1>

                <div class=" form-group form-floating">
                    <input asp-for="Email" type="email" class="form-control" placeholder="name@example.com">
                    <label asp-for="Email">Eposta adresi</label>
                    <span asp-validation-for="Email" class="text-danger"></span>
                </div>

                <div class="form-group form-floating">
                    <input asp-for="Password" type="password" class="form-control" placeholder="Şifre">
                    <label asp-for="Password">Şifre</label>
                    <span asp-validation-for="Password" class="text-danger"></span>
                </div>

                <div class="checkbox mb-3">
                    <label>
                        <input asp-for="RememberMe" type="checkbox"> Beni hatırla
                    </label>
                </div>
                <button class="w-100 btn btn-lg btn-primary" type="submit">Giriş Yap</button>
            </form>
        </main>

    </div>
        <!--begin::Global Javascript Bundle(used by all pages)-->
        <script src="/assets/plugins/global/plugins.bundle.js"></script>
        <script src="/assets/js/scripts.bundle.js"></script>
        <partial name="_ValidationScriptsPartial" />
</body>
</html>
