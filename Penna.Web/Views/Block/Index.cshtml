<!--begin::Modal - Block - Add-->
<div class="modal fade" id="kt_modal_add_blocks" tabindex="-1" aria-hidden="true">
    <!--begin::Modal dialog-->
    <div class="modal-dialog modal-dialog-centered mw-750px">
        <!--begin::Modal content-->
        <div class="modal-content">
            <!--begin::Form-->
            <form class="form" action="#" method="post" id="kt_modal_add_blocks_form" data-kt-redirect="/Block">
                <!--begin::Modal header-->
                <div class="modal-header" id="kt_modal_add_blocks_header">
                    <!--begin::Modal title-->
                    <h2 class="fw-bolder">Yeni Blok Ekleme</h2>
                    <!--end::Modal title-->
                    <!--begin::Close-->
                    <div id="kt_modal_add_blocks_close" class="btn btn-icon btn-sm btn-active-icon-primary">
                        <!--begin::Svg Icon | path: icons/duotone/Navigation/Close.svg-->
                        <span class="svg-icon svg-icon-1">
                            <svg xmlns="http://www.w3.org/2000/svg" xmlns:xlink="http://www.w3.org/1999/xlink" width="24px" height="24px" viewBox="0 0 24 24" version="1.1">
                                <g transform="translate(12.000000, 12.000000) rotate(-45.000000) translate(-12.000000, -12.000000) translate(4.000000, 4.000000)" fill="#000000">
                                    <rect fill="#000000" x="0" y="7" width="16" height="2" rx="1" />
                                    <rect fill="#000000" opacity="0.5" transform="translate(8.000000, 8.000000) rotate(-270.000000) translate(-8.000000, -8.000000)" x="0" y="7" width="16" height="2" rx="1" />
                                </g>
                            </svg>
                        </span>
                        <!--end::Svg Icon-->
                    </div>
                    <!--end::Close-->
                </div>
                <!--end::Modal header-->
                <!--begin::Modal body-->
                <div class="modal-body py-10 px-lg-17">
                    <!--begin::Scroll-->
                    <div class="scroll-y me-n7 pe-7" id="kt_modal_add_blocks_scroll" data-kt-scroll="true" data-kt-scroll-activate="{default: false, lg: true}" data-kt-scroll-max-height="auto" data-kt-scroll-dependencies="#kt_modal_add_blocks_header" data-kt-scroll-wrappers="#kt_modal_add_blocks_scroll" data-kt-scroll-offset="300px">
                        <!--begin::Input group Name & TypeId-->
                        <div class="row mb-7">
                            <!--begin::Input group Name-->
                            <div class="col-md-6 fv-row">
                                <!--begin::Label-->
                                <label class="required fs-6 fw-bold mb-2">Blok Adı</label>
                                <!--end::Label-->
                                <!--begin::Input-->
                                <input type="text" name="Name" class="form-control form-control-solid" placeholder="Blok adı giriniz" />
                                <!--end::Input-->
                            </div>
                            <!--end::Input group Name-->
                            <!--begin::Input group TypeId-->
                            <div class="col-md-6 fv-row">
                                <!--begin::Label-->
                                <label class="required fs-6 fw-bold mb-2">Türü</label>
                                <!--end::Label-->
                                <!--begin::Input-->
                                <select name="TypeId" asp-items="@Html.GetEnumSelectList<BlockTypeEnum>()" class="form-select form-select-solid fw-bolder" aria-label="Blok türü Seç." data-dropdown-parent="#kt_modal_add_blocks" data-placeholder="- Lütfen blok türü seçiniz">
                                    <option value="">Blok türü seç...</option>
                                </select>
                                <!--end::Input-->
                            </div>
                            <!--end::Input group TypeId-->
                        </div>
                        <!--end::Input group BlockName & TypeId-->
                        <!--begin::Input group FloorCount & BasementCount-->
