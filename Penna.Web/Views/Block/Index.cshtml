                            <!--end::Col BasementCount-->
                        </div>
                        <!--end::Input group FloorCount & BasementCount-->
                        <!--begin::Input ApartmentCount-->
                        <div class="row g-9 mb-7">
                            <!--begin::Col ApartmentCount-->
                            <div class="col-md-6 fv-row">
                                <!--begin::Label-->
                                <label class="required fs-6 fw-bold mb-2">Kat Başına Bağımsız Bölüm Sayısı</label>
                                <!--end::Label-->
                                <!--begin::Input-->
                                <input type="text" name="ApartmentCount" class="form-control form-control-solid" placeholder="Her katta bulunan bölüm sayısı giriniz" />
