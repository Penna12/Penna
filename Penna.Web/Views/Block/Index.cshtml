                            <!--begin::Title-->
                            <h2 class="fw-bolder text-dark underline underline-gray">Maliyet Hesaplama Tablosu</h2>
                            <!--end::Title-->
                        </div>
                        <div class="notice d-flex bg-light-primary rounded border-primary border border-dashed p-6">
                            <!--begin::Wrapper-->
                            <div class="d-flex flex-stack flex-grow-1">
                                <!--begin::Content-->
                                <!--begin::Input group BlockCostCalculation & FloorCalculation & BasementCount-->
                                <!--begin::Col BlockCostCalculation-->
                                <div class="fv-row">
                                    <!--begin::Label-->
                                    <label class="fs-6 fw-bold mb-2">
                                        <span class="required">Blok</span>
                                        <i class="fas fa-exclamation-circle ms-1 fs-7" data-bs-toggle="tooltip" title="Blok Hesaplama"></i>
                                    </label>
                                    <!--end::Label-->
                                    <!--begin::Input-->
                                    <select asp-items="@Html.GetEnumSelectList<CostCalculationEnum>()" name="BlockCostCalculation" class="form-select form-select-solid"></select>
                                    <!--end::Input-->
                                </div>
                                <!--end::Col BlockCostCalculation-->
                                <!--begin::Col FloorCalculation-->
                                <div class="fv-row">
                                    <!--begin::Label-->
                                    <label class="required fs-6 fw-bold mb-2">Daire</label>
                                    <!--end::Label-->
                                    <!--begin::Input-->
                                    <select asp-items="@Html.GetEnumSelectList<CostCalculationEnum>()" name="ApartmentCostCalculation" class="form-select form-select-solid"></select>
                                    <!--end::Input-->
                                </div>
                                <!--end::Col ApartmentCostCalculation-->
                                <!--begin::Col PublicAreaCostCalculation-->
                                <div class="fv-row">
                                    <!--begin::Label-->
                                    <label class="required fs-6 fw-bold mb-2">Ortak Alan</label>
                                    <!--end::Label-->
                                    <!--begin::Input-->
                                    <select asp-items="@Html.GetEnumSelectList<CostCalculationEnum>()" name="PublicAreaCostCalculation" class="form-select form-select-solid"></select>
                                    <!--end::Input-->
                                </div>
                                <!--end::Col PublicAreaCostCalculation-->
                                <!--end::Input group BlockCostCalculation & ApartmentCostCalculation & PublicAreaCostCalculation-->
                                <!--end::Content-->
                            </div>
                            <!--end::Wrapper-->
                        </div>
                    </div>
                    <!--end::Scroll-->
                </div>
                <!--end::Modal body-->
                <!--begin::Modal footer-->
                <div class="modal-footer flex-center">
                    <!--begin::Button-->
                    <button type="reset" id="kt_modal_add_blocks_cancel" class="btn btn-white me-3">Vazgeç</button>
                    <!--end::Button-->
                    <!--begin::Button-->
                    <button type="submit" id="kt_modal_add_blocks_submit" class="btn btn-primary">
                        <span class="indicator-label">Kaydet</span>
                        <span class="indicator-progress">
                            Lütfen bekleyin...
                            <span class="spinner-border spinner-border-sm align-middle ms-2"></span>
                        </span>
                    </button>
                    <!--end::Button-->
                </div>
                <!--end::Modal footer-->
            </form>
            <!--end::Form-->
        </div>
    </div>
</div>
<!--end::Modal - Block - Add-->
